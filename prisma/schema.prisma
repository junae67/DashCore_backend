generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Erp {
  id          String      @id @default(cuid())
  name        String      @unique // dynamics365, sap, oracle, etc.
  description String?
  connectors  Connector[]
  companies   Company[]
  financeData FinanceData[] // ➜ Relación agregada
}

model Company {
  id         String      @id @default(cuid())
  name       String
  email      String      @unique
  erpId      String
  erp        Erp         @relation(fields: [erpId], references: [id])
  users      User[]
  dashboards Dashboard[]
  connectors Connector[]
  financeData FinanceData[] // ➜ Relación agregada
  erpConfigs ERPConfig[] // ➜ Configuraciones ERP personalizadas
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String // Encriptada
  role      String // admin, viewer, etc.
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Dashboard {
  id          String   @id @default(cuid())
  name        String
  description String?
  config      Json
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Connector {
  id           String    @id @default(cuid())
  type         String // dynamics, sap, oracle
  accessToken  String
  refreshToken String?
  expiresAt    DateTime?
  companyId    String
  company      Company   @relation(fields: [companyId], references: [id])
  erpId        String
  erp          Erp       @relation(fields: [erpId], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model FinanceData {
  id         String   @id @default(cuid())
  type       String   // sales_order, invoice, etc.
  payload    Json     // Datos crudos recibidos
  companyId  String
  company    Company  @relation(fields: [companyId], references: [id])
  erpId      String
  erp        Erp      @relation(fields: [erpId], references: [id])
  createdAt  DateTime @default(now())
}

// ========== NUEVOS MODELOS PARA PERSONALIZACIÓN ==========

// Configuración de ERP por cliente
model ERPConfig {
  id          String          @id @default(cuid())
  companyId   String
  company     Company         @relation(fields: [companyId], references: [id], onDelete: Cascade)
  erpType     String          // 'dynamics365', 'sap', 'businesscentral'
  isActive    Boolean         @default(true)
  modules     ModuleConfig[]  // Módulos habilitados para este cliente
  customSettings Json?         // Configuración adicional específica del ERP
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@unique([companyId, erpType]) // Un cliente puede tener solo una config por ERP
  @@index([companyId])
  @@index([erpType])
}

// Configuración de módulos por cliente
model ModuleConfig {
  id            String     @id @default(cuid())
  erpConfigId   String
  erpConfig     ERPConfig  @relation(fields: [erpConfigId], references: [id], onDelete: Cascade)
  moduleType    String     // 'leads', 'contacts', 'finance'
  isEnabled     Boolean    @default(true)
  displayName   String?    // Nombre personalizado del módulo
  endpoint      String     // Endpoint del ERP a usar (ej: 'salesOrders', 'salesQuotes', 'customers')
  fieldMappings Json?      // Mapeo de campos personalizados
  filters       Json?      // Filtros adicionales (ej: fecha, estado)
  sortOrder     Int        @default(0) // Orden de visualización
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([erpConfigId, moduleType]) // Un módulo por config de ERP
  @@index([erpConfigId])
  @@index([moduleType])
}
