generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ERP {
  id          String      @id @default(cuid())
  name        String      @unique // dynamics365, sap, oracle, etc.
  description String?
  connectors  Connector[]
  companies   Company[]
}

model Company {
  id         String      @id @default(cuid())
  name       String
  email      String      @unique
  erpId      String
  erp        ERP         @relation(fields: [erpId], references: [id])
  users      User[]
  dashboards Dashboard[]
  connectors Connector[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String // Encriptada
  role      String // admin, viewer, etc.
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Dashboard {
  id          String   @id @default(cuid())
  name        String
  description String?
  config      Json
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Connector {
  id           String    @id @default(cuid())
  type         String // dynamics, sap, oracle
  accessToken  String
  refreshToken String?
  expiresAt    DateTime?
  companyId    String
  company      Company   @relation(fields: [companyId], references: [id])
  erpId        String
  erp          ERP       @relation(fields: [erpId], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
